{
  "name": "hdm",
  "version": "0.0.0-development",
  "private": true,
  "description": "A short overview of the company in their products.",
  "homepage": "https://github.com/100herz/hdm#readme",
  "bugs": {
    "url": "https://github.com/100herz/hdm/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/100herz/hdm.git"
  },
  "license": "ISC",
  "author": "100HERZ GmbH",
  "scripts": {
    "commit": "git-cz",
    "lint": "echo \"yarn lint:js && yarn lint:style\"",
    "lint:js": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix --ignore-path .gitignore",
    "lint:style": "stylelint **/*.{css,pcss,scss} --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "lint-staged": {
    "*.+(ts|tsx)": "cd packages/frontend && cross-env NODE_ENV=test jest",
    "*.{css,pcss,scss}": "echo \"stylelint --fix\"",
    "*.{js,ts,jsx,tsx}": "echo \"eslint --fix\""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    "last 4 version",
    "> 2%",
    "not dead"
  ],
  "prettier": "./config/.prettierrc.json",
  "eslintConfig": {
    "extends": "./config/.eslintrc.json",
    "ignorePatterns": "/.*"
  },
  "stylelint": {
    "extends": "./config/.stylelintrc.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "prettier-eslint-cli": "^5.0.0",
    "semantic-release": "^17.1.1",
    "stylelint": "^13.7.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "./config/release.config.js"
  }
}
