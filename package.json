{
  "name": "hdm",
  "version": "2.0.0-next.1",
  "private": true,
  "description": "A short overview of the company in their products.",
  "homepage": "https://github.com/100herz/hdm#readme",
  "bugs": {
    "url": "https://github.com/100herz/hdm/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/100herz/hdm.git"
  },
  "license": "ISC",
  "author": "100HERZ GmbH",
  "scripts": {
    "build": "next build",
    "commit": "git-cz",
    "dev": "next",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix --ignore-path .gitignore",
    "lint:style": "stylelint **/*.{css,scss} --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release",
    "start": "next start",
    "test": "cross-env NODE_ENV=test jest",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch --updateSnapshot",
    "type-check": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "lint-staged": {
    "*.+(ts|tsx)": "cross-env NODE_ENV=test jest --passWithNoTests",
    "*.{css,pcss,scss}": "echo \"stylelint --fix\"",
    "*.{js,ts,jsx,tsx}": "echo \"eslint --fix\""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "babel": {
    "extends": "./config/babel.config.json"
  },
  "browserslist": [
    "last 4 version",
    "> 2%",
    "not dead"
  ],
  "prettier": "./config/.prettierrc.json",
  "eslintConfig": {
    "extends": "./config/.eslintrc.json",
    "ignorePatterns": "/.*"
  },
  "stylelint": {
    "extends": "./config/.stylelintrc.json"
  },
  "dependencies": {
    "next": "^9.5.3",
    "nprogress": "^0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scroll": "^1.8.1",
    "react-stickynode": "^3.0.3",
    "styled-components": "^5.2.0",
    "tailwindcss": "^1.8.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/react": "^11.0.4",
    "@types/enzyme": "^3.10.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-scroll": "^1.8.0",
    "@types/react-stickynode": "^3.0.0",
    "@types/styled-components": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "autoprefixer": "^9.8.6",
    "babel-jest": "^26.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-styled-components": "^7.0.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.3.0",
    "node-sass": "^4.14.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.1",
    "prettier-eslint-cli": "^5.0.0",
    "semantic-release": "^17.1.1",
    "stylelint": "^13.7.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.18.0",
    "tailwind.macro": "^1.0.0-alpha.10",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "./config/release.config.js"
  }
}
